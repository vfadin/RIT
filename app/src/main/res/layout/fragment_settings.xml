<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.RIT.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.RIT.PopupOverlay"
            app:title="Settings" />

    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/row_dog_api"
        layout="@layout/item_choose_api" />

    <include
        android:id="@+id/row_nationalize_api"
        layout="@layout/item_choose_api" />

    <include
        android:id="@+id/row_custom_api"
        layout="@layout/item_choose_api" />

</androidx.appcompat.widget.LinearLayoutCompat>